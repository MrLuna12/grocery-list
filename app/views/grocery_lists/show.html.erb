<div class="flex flex-col gap-4">
  <nav class="bg-white shadow-sm rounded-lg">
    <%= link_to grocery_lists_path, class: 'flex items-center p-4 text-red-600 hover:text-red-700' do %>
      <i class="fa-solid fa-arrow-right fa-rotate-180 mr-2"></i>
      Back
    <% end %>
  </nav>

  <section class="bg-white rounded-xl shadow-sm">
    <header class="p-6">
      <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold"><%= @grocery_list.title %></h1>
        <%= link_to new_grocery_list_item_path(@grocery_list),
                    class: 'inline-flex items-center px-4 py-2 border-2 border-blue-600 rounded-lg text-blue-600 hover:bg-blue-600 hover:text-white transition-colors' do %>
          <i class="fa-solid fa-plus mr-2"></i>
          Add New Item
        <% end %>
      </div>
      <hr class="mt-4">
    </header>

    <div class="p-6">
      <% if @items.any? %>
        <ul class="flex flex-col gap-4" data-controller="toggle">
          <% @items.each do |item| %>
            <li class="flex items-center gap-3 group">
              <%= check_box_tag "item_#{item.id}",
                                item.id,
                                item.checked_at,
                                data: {
                                  action: 'toggle#submit',
                                  toggle_url_param: grocery_list_item_path(@grocery_list, item)
                                },
                                class: 'w-6 h-6 rounded-lg border-gray-300' %>
              <span class="text-lg"><%= item.name.titleize %> x<%= item.quantity %></span>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-gray-500 text-center py-8">No items in the list</p>
      <% end %>
    </div>
  </section>
</div>
