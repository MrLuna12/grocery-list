<div>
    <h1 class="text-4xl">New Grocery List</h1>

<%= form_with model: @grocery_list do |form| %>
    <div class="flex flex-col">
        <%= form.label :title %>
        <%= form.text_field :title, class: "w-full border rounded p-2" %>
        <% if @grocery_list.errors[:title].any? %>
            <div class="text-red-600">
                <% @grocery_list.errors[:title].each do |message| %>
                    <p><%= message %></p>
                <% end %>
            </div>
        <% end %>
    </div>
    <div class="mt-2 py-1 px-2 inline-flex border-2 border-blue-600 rounded cursor-pointer hover:bg-[#0069d9] hover:text-white">
        <%= form.submit "Create Grocery List" %>
    </div>
<% end %>
</div>